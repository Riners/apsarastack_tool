.header .useName{
	float: right;
    /*line-height: 60px;*/
   line-height: 50px;
    position: relative;
}
.header .useName .user-info{
	cursor: pointer;
	min-width: 85px;
	position: absolute;
	right: 0;
}
.header .useName .user-info .ng-binding{
	color: #fff;
}
.header .useName a{
	color:#9d9d9d ;
	text-decoration: none;
}
.header .logout{
    width: 80px;
    height: 25px;
    background: #fff;
    text-align: center;
    line-height: 25px;
    /*top: 63px;*/
    /*top: 53px;*/
    right: 0;
    display: none;
    z-index: 200;
    position: relative;
}
.header .useName .user-info:hover .logout{
	display: block;
}
/*side bar*/
.side-bar-content{
 color: #FFFFFF;
/* padding: 20px 10px;*/
 overflow: hidden;
 width: 160px;
 background: #3e4048;
}
.body-content{
	margin-left: 160px;
}
.side-bar-content > div{
 text-align: center;
 padding-bottom: 15px;
 background: #42485b;
 padding-top: 20px;
}
.side-bar-content > div span{
cursor: pointer;
}
.side-bar-content li{
 list-style: none;
}
.side-bar-content a{
 color:#9d9d9d;
 text-decoration: none;
}
.side-bar-content a:hover{
	color: #FFFFFF;
}
.side-bar-content .side-bar-level-ul {
	width: 160px;
	overflow: hidden;
}
.side-bar-content .side-bar-subMenu{
 /*padding-left: 32px;*/
 display: none;
}
.side-bar-content .side-bar-subMenu.active{
 display: block;
}
.side-bar-content .side-bar-subMenu li{
 padding:5px 10px 5px 32px;
}
.side-bar-content .side-bar-subMenu li:hover {
	background:#00c1de; 
}
.side-bar-content .side-bar-subMenu li:hover a{
	color: #FFFFFF;
}
.side-bar-content .side-bar-level-menu{
 padding:5px 10px;
 background: #42485b;
 /*width: 100px;
 overflow: hidden;*/
}
.side-bar-content .side-bar-level-menu:hover{
	background:#00c1de;
}
.side-bar-content .side-bar-level-menu:hover a{
	color: #FFFFFF;
}
.side-bar-content .side-bar-level-menu span{
 font-size: 10px;
 -webkit-transform:scale(0.8);
 padding-right: 10px;
}
