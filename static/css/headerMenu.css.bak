body, div , ul, li, h1, h2, h3, h4, h5, h6, p{margin: 0; padding: 0;}
.header > ul > li{
	float: left;
	list-style: none;
	cursor: pointer;
}
.header > ul > li:hover > span a{
	color: #FFFFFF;
    opacity: 0.9;
    text-decoration: none;
}
.header .headerNav .bottom-line.active{
	height: 3px;
	background:#1aeac4;
	position: relative;
	top:-1px;
	width: 100%;
}
.header .headerNav .bottom-line.clickActive{
	height: 3px;
	background:red;
	position: relative;
	top:0px;
	width: 100%;
}
.header .headerNav .bottom-line.clickActive.active{
	background: #1aeac4;
}
.header .headerNav.hoverActive{
	background: #222222;
}
.header .headerNav.hoverActive.clickActive{
	background: #222222;
}
.header .headerNav.clickActive{
	background: #907e7e;
}
.header > ul > li:hover .logo a {
	color: #FFFFFF;
}
.header > ul > li .logo a {
	text-decoration: none;
	color: #9d9d9d;
}
.header > ul > li .logo a:hover{
	color: #FFFFFF;
}
.header > ul > li > span a{
	color: #9d9d9d;
	line-height: 40px;
	padding:0 15px;
	text-decoration: none;
}
.header > ul > li .logo {
	padding-left: 0;
	font-size:18px;
}
.header > ul > li > span:hover{
	color: #FFFFFF;
    opacity: 0.9;
}
.header{
	height: 40px;
	background:#3e4048 ;
}
.header .subMenu > ul >li {
	float: left;
	list-style: none;
}
.header > ul {
	margin: 0 auto;
	width: 1140px;
}
.header .subMenu{
	display: none;
	position: absolute;
	width: 100%;
	background:#222222;
	min-height: 90px;
	left: 0;
	z-index: 100;
	top: mm63px;
}
.header .subMenu > ul{
	width: 1140px;
	margin: 0 auto;
}
.header .subMenu > ul > li {
	padding: 0 15px;
    padding-top: 20px;
}
.header .subMenu > ul > li:hover > span >a{
	color: red;
}
.header .subMenu > ul > li > span a{
	color: #ece8e8;
	text-decoration: none;
	font-size: 12px;
}
.header .subMenu > ul > li ul li a{
	color: #b5b5b7;
	text-decoration: none;
}
.header .subMenu > ul > li ul li{
	list-style: none;
	padding: 1px 0;
	/*font-size: 10px;*/
	font-size: 12px;
}
.header .subMenu > ul > li ul li:hover a{
	color: #FFFFFF;
}
.header .subMenu > ul > li ul{
	margin-top: 10px;
	padding-bottom: 20px;
}
.header .subMenu.active{
	display: block;
}
